<% if (messages.success) { %>
<div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %> <% if (messages.error) { %>
<div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<div class="card">
  <div class="card-header">
    <ul class="nav nav-pills w-100">
      <li class="nav-pill active">
        <a class="nav-link">Courses</a>
      </li>
      <li class="nav-pill ml-auto">
        <a class="nav-link active">Add Course</a>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <% if(data.length) { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Description</th>
          <th scope="col">Department</th>
          <th scope="col">Number</th>
          <th scope="col">Credits</th>
          <th width="200px">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i< data.length; i++) { %>
        <tr>
          <th scope="row" class="align-middle"><%= data[i].id %></th>
          <td class="align-middle"><%= data[i].desc %></td>
          <td class="align-middle"><%= data[i].department %></td>
          <td class="align-middle"><%= data[i].number%></td>
          <td class="align-middle"><%= data[i].credits%></td>
          <td class="align-middle">
            <a class="btn btn-secondary edit">Edit</a>
            <a class="btn btn-danger delete" onclick="return alert('Are You sure?')">Delete</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>

    <!-- if result is empty -->
    <% if(!data.length) { %>
    <p class="text-center">No Courses found!</p>
    <% } %>
  </div>
</div>
