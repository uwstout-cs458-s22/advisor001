      </tbody>
    </table>
    <% } %>

    <!-- if result is empty -->
    <% if(!courseData.length) { %>
    <p class="text-center">No Courses found!</p>
    <% } %>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addProgramModal">Add Program</button>

    <!-- if result is empty -->
    <% if(!termData.length) { %>
      <p class="text-center">No Terms found!</p>
    <% } %>

    <% if(programData.length) { %>
      <div class="form-group">
        <form action="">
          <label for="programs">What Program would you like to view?</label>
          <br>
          <select name="programs" id="programs" class="form-control">
            <option value="none" selected disabled hidden>Select a Program</option>
            <% for(var i = 0; i < programData.length; i++) { %>
              <option value="<%=programData[i].id%>"><%= programData[i].title %></option>
            <% } %>
          </select>
          <br>
          <input type="submit" value="Search" class="btn btn-primary">
        </form>
      </div>
    <% } %>

<!-- Add Term Modal -->
<div id="addProgramModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Add Program</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="addProgramForm" method="POST" action="/manage/program/add/">
        <!-- Title -->
        <div class="form-group">
          <label for="programTitle">Program Name: </label>
          <input class="form-control" type="text" name="programTitle"></input>
        </div>
        <!-- Desc -->
        <div class="form-group">
          <label for="programDescription">Program Description</label>
          <input class="form-control" type="text" name="programDescription"></input>
        </div>
        <div class="form-group">
          <button type="submit" id="submit" class="btn btn-success">Save</button>
          <button class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

    <!-- if result is empty -->
    <% if(!programData.length) { %>
      <p class="text-center">No Programs found!</p>
    <% } %>

    <% if(termData.length) { %>
      <div class="form-group">
        <form action="">
          <label for="terms">What Term would you like to view?</label>
          <br>
          <select name="terms" id="terms" class="form-control">
            <option value="none" selected disabled hidden>Select a Term</option>
            <% for(var i = 0; i < termData.length; i++) { 
              switch(termData[i].semester) {
                case 0: %>
                 <option value="<%=termData[i].id%>">Fall <%= termData[i].startyear %></option>
                  <% break;
                case 1: %>
                  <option value="<%=termData[i].id%>">Winter <%= termData[i].startyear %></option>
                  <% break;
                case 2: %>
                  <option value="<%=termData[i].id%>">Spring <%= termData[i].startyear %></option>
                  <% break;
                case 3: %>
                  <option value="<%=termData[i].id%>">Summer <%= termData[i].startyear %></option>
                  <% break;
                default: %>
                  <p>Invalid Term!</p>
             <% } %>
           <% } %>
          </select>
          <br>
          <input type="submit" value="Search" class="btn btn-primary">
          <script>
            const termId = document.getElementById('terms').value;
          </script>
          <button type="button" value="Edit Term" class="btn btn-primary" data-toggle="modal" data-target="#editTermModal">Edit Term</button>
        </form>
      </div>
    <% } %>

    <!-- if result is empty -->
    <% if(!termData.length) { %>
      <p class="text-center">No Terms found!</p>
    <% } %>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addTermModal">Add Term</button>

  </div>
</div>

<!-- Add Term Modal -->
<div id="addTermModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Add Term</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="addTermForm" method="POST" action="/manage/term/add/">
        <!-- Title -->
        <div class="form-group">
          <label for="termTitle">Term Name: </label>
          <input class="form-control" type="text" name="termTitle"></input>
        </div>
        <!-- Start Year -->
        <div class="form-group">
          <label for="termYear">Start Year: </label>
          <input class="form-control" id="yearSelect" type="number" min="2022" max="9999" name="termYear" value=""></input>
          <script>document.getElementById("yearSelect").value = (new Date().getFullYear())</script>
        </div>
        <!-- Semester -->
        <div class="form-group">
          <label for="termSemester">Semester: </label>
          <input class="form-control" type="number" min="1" max="2" name="termSemester"></input>
        </div>
        <div class="form-group">
          <button type="submit" id="submit" class="btn btn-success">Save</button>
          <button class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Term Modal This will be used later -->
<div id="editTermModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Edit Term</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="editTermForm" method="POST" action="/manage/term/edit/">
        <!-- Title -->
        <div class="form-group">
          <label for="editTermTitle">Term Name: </label>
          <input class="form-control" type="text" name="editTermTitle" value=""></input>
        </div>
        <!-- Start Year -->
        <div class="form-group">
          <label for="editTermYear">Start Year: </label>
          <input class="form-control" type="number" min="2022" max="9999" name="editTermYear" value="9999"></input>
        </div>
        <!-- Semester -->
        <div class="form-group">
          <label for="editTermSemester">Semester: </label>
          <input class="form-control" type="number" min="1" max="2" name="editTermSemester" value="1"></input>
        </div>
        <div class="form-group">
          <button type="submit" id="submit" class="btn btn-success">Save</button>
          <button class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  //Adding Table pages, search bar, and sorting using JQuery
  $(document).ready(function () {
    $('#courses-table').DataTable();
  });
</script>
