  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
    crossorigin="anonymous"
  />
  <script
    src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
    integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
    crossorigin="anonymous"
  ></script>

  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
    integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
    crossorigin="anonymous"
  ></script>
  <script
    src="http://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"
  ></script>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
</head>

<% if (messages.success) { %>
<div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %> <% if (messages.error) { %>
<div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<div class="card">
  <div class="card-header">
    <ul class="nav nav-pills w-100">
      <li class="nav-pill active">
        <a class="nav-link">Courses</a>
      </li>
      <li class="nav-pill ml-auto">
        <a class="nav-link active" data-toggle="modal" data-target="#addCourseModal">Add Course</a>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <% if(data.length) { %>
    <table class="table" id="courses-table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Department</th>
          <th scope="col">Number</th>
          <th scope="col">Credits</th>
          <th width="200px">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i< data.length; i++) { %>
        <tr>
          <th scope="row" class="align-middle"><%= data[i].id %></th>
          <td class="align-middle"><%= data[i].title %></td>
          <td class="align-middle"><%= data[i].description %></td>
          <td class="align-middle"><%= data[i].prefix %></td>
          <td class="align-middle"><%= data[i].suffix%></td>
          <td class="align-middle"><%= data[i].credits%></td>
          <td class="align-middle">
            <a class="btn btn-secondary edit" data-toggle="modal" data-target="#editCourseModal-<%=i%>">Edit</a>
            <a class="btn btn-danger delete" onclick="return confirm('Confirm Deletion?')" href="/manage/course/delete/<%=data[i].id%>" >Delete</a>
          </td>
        </tr>
        

<!-- Add Course Modal -->
<div id="addCourseModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Add Course</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="addCourseForm" method="POST" action="/manage/course/add/">
        <!-- Prefix -->
        <div class="form-group">
          <label for="coursePrefix">Prefix: </label>
          <input class="form-control" type="text" name="coursePrefix"></input>
        </div>
        <!-- Suffix -->
        <div class="form-group">
          <label for="courseSuffix">Suffix: </label>
          <input class="form-control" type="text" name="courseSuffix"></input>
        </div>
        <!-- Title -->
        <div class="form-group">
          <label for="courseTitle">Title: </label>
          <input class="form-control" type="text" name="courseTitle"></input>
        </div>
        <!-- Description -->
        <div class="form-group">
          <label for="courseDescription">Description: </label>
          <input class="form-control" type="text" name="courseDescription"></input>
        </div>
        <!-- Credits -->
        <div class="form-group">
          <label for="courseCredits">Credits: </label>
          <input class="form-control" type="number" name="courseCredits"></input>
        </div>
        <div class="form-group">
          <button type="submit" id="submit" class="btn btn-success">Save</button>
          <button class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Course Modal -->
<div id="editCourseModal-<%=i%>" class="modal fade" role="dialog">
  <div class="modal-dialog modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Edit Course</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="editCourseForm" method="POST" action="/manage/course/edit/<%=data[i].id%>">
        <!-- Prefix -->
        <div class="form-group">
          <label for="editPrefix">Prefix: </label>
          <input class="form-control" value="<%=data[i].prefix%>" type="text" name="editPrefix"></input>
        </div>
        <!-- Suffix -->
        <div class="form-group">
          <label for="editSuffix">Suffix: </label>
          <input class="form-control" value="<%=data[i].suffix%>" type="text" name="editSuffix"></input>
        </div>
        <!-- Title -->
        <div class="form-group">
          <label for="editTitle">Title: </label>
          <input class="form-control" value="<%=data[i].title%>" type="text" name="editTitle"></input>
        </div>
        <!-- Description -->
        <div class="form-group">
          <label for="editDescription">Description: </label>
          <input class="form-control" value="<%=data[i].description%>" type="text" name="editDescription"></input>
        </div>
        <!-- Credits -->
        <div class="form-group">
          <label for="editCredits">Credits: </label>
          <input class="form-control" value="<%=data[i].credits%>" type="number" name="editCredits"></input>
        </div>
        <div class="form-group">
          <button type="submit" id="submit" class="btn btn-success">Save</button>
          <button class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- Closing for loop -->
        <% } %>
      </tbody>
    </table>
    <% } %>

    <!-- if result is empty -->
    <% if(!data.length) { %>
    <p class="text-center">No Courses found!</p>
    <% } %>

    <div class="form-group">
      <form>
        <label for="programs">What Program would you like to view?</label>
        <br>
        <select name="programs" id="programs" class="form-control">
          <option value="none" selected disabled hidden>Select a Program</option>
          <optgroup label="Majors">
            <option value="animDigi">BFA Animation & Digital Media</option>
            <option value="appBioChemMolBio">BS Applied Biochemistry and Molecular Biology</option>
            <option value="appMathComSci">BS Applied Mathematics and Computer Science</option>
            <option value="appSci">BS Applied Science</option>
          </optgroup>
          <optgroup label="Minors">
            <option value="appForLang">Applied Foreign Languages</option>
            <option value="appPcStud">Applied Peace Studies</option>
            <option value="artHist">Art History</option>
            <option value="bio">Biology</option>
          </optgroup>
        </select>
        <br>
        <input type="submit" value="Search"  class="btn btn-primary">
      </form>
    </div>
    <br>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addTermModal">Add Term</button>
    <div class="form-group">
      <form action="">
        <label for="terms">What Term would you like to view?</label>
        <br>
        <select name="terms" id="terms" class="form-control">
          <option value="none" selected disabled hidden>Select an Term</option>
          <option value="spring22">Spring 2022</option>
          <option value="fall22">Fall 2022</option>
          <option value="spring21">Spring 2021</option>
          <option value="fall22">Fall 2021</option>
          <option value="spring20">Spring 2020</option>
          <option value="fall22">Fall 2020</option>
          <option value="spring19">Spring 2019</option>
          <option value="fall22">Fall 2019</option>
        </select>
        <br>
        <input type="submit" value="Search" class="btn btn-primary">
      </form>
    </div>

  </div>
</div>

<!-- Add Term Modal -->
<div id="addTermModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Add Term</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="addTermForm" method="POST" action="/manage/term/add/">
        <!-- Title -->
        <div class="form-group">
          <label for="termTitle">Term Name: </label>
          <input class="form-control" type="text" name="termTitle"></input>
        </div>
        <!-- Start Year -->
        <div class="form-group">
          <label for="termYear">Start Year: </label>
          <input class="form-control" id="yearSelect" type="number" min="2022" max="9999" name="termYear" value=""></input>
          <script>document.getElementById("yearSelect").value = (new Date().getFullYear())</script>
        </div>
        <!-- Semester -->
        <div class="form-group">
          <label for="termSemester">Semester: </label>
          <input class="form-control" type="number" min="1" max="2" name="termSemester"></input>
        </div>
        <div class="form-group">
          <button type="submit" id="submit" class="btn btn-success">Save</button>
          <button class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  //Adding Table pages, search bar, and sorting using JQuery
  $(document).ready(function () {
    $('#courses-table').DataTable();
  });
</script>
